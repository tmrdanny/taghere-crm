# Database (PostgreSQL for production)
DATABASE_URL="postgresql://user:password@host:5432/taghere_crm"

# JWT Secret (generate a secure random string)
JWT_SECRET="your-secure-jwt-secret-here"

# Kakao OAuth
KAKAO_CLIENT_ID="your-kakao-rest-api-key"
KAKAO_CLIENT_SECRET="your-kakao-client-secret"
KAKAO_REDIRECT_URI="https://your-api-domain.com/auth/kakao/callback"

# Kakao JavaScript SDK (for simple login - opens KakaoTalk app on mobile)
NEXT_PUBLIC_KAKAO_JS_KEY="your-kakao-javascript-key"

# App URLs
PUBLIC_APP_URL="https://your-web-domain.com"
API_URL="https://your-api-domain.com"

# SOLAPI (AlimTalk)
SOLAPI_API_KEY="your-solapi-api-key"
SOLAPI_API_SECRET="your-solapi-api-secret"
SOLAPI_PF_ID="your-kakao-channel-id"
SOLAPI_TEMPLATE_ID_POINTS_EARNED="your-template-id"
SOLAPI_TEMPLATE_ID_POINTS_USED="your-template-id"
SOLAPI_TEMPLATE_ID_REVIEW_REQUEST="your-template-id"
SOLAPI_TEMPLATE_ID_LOW_BALANCE="your-template-id"
KAKAO_STAMP_TEMPLATE_CODE="your-stamp-template-id"

# TossPayments
TOSS_SECRET_KEY="your-toss-secret-key"
NEXT_PUBLIC_TOSS_CLIENT_KEY="your-toss-client-key"

# TagHere API (for order-based point calculation)
TAGHERE_API_URL="https://api.tag-here.com"
TAGHERE_API_TOKEN_FOR_CRM="your-taghere-api-token"

# TagHere Dev API (for development/testing)
TAGHERE_DEV_API_URL="https://api.d.tag-here.com"
TAGHERE_DEV_API_TOKEN="your-taghere-dev-api-token"

# Naver OAuth
NAVER_CLIENT_ID="your-naver-client-id"
NAVER_CLIENT_SECRET="your-naver-client-secret"
NAVER_REDIRECT_URI="https://your-api-domain.com/auth/naver/callback"
